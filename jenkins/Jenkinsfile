pipeline {
    agent {
        dockerfile {
            filename 'docker/Dockerfile'
            additionalBuildArgs '--build-arg ssh_prv_key="$(cat ~/.ssh/id_rsa)" --build-arg ssh_pub_key="$(cat ~/.ssh/id_rsa.pub)" --build-arg squash --build-arg ssh'
        }
    }
    environment {
        CI = 'true'
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }
    stages {
        stage('Build For Testing') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deploy to Gh-Pages') {
            when {
                branch 'production'
            }
            steps {
                sh 'git config --global user.email "jingley22@gmail.com"'
                sh 'git config --global user.name "Jon Ross Ingley - Jenkins Pipeline"'
                sh 'git remote set-url origin git@github.com:jingley/jrs-website'
                sh './jenkins/scripts/deploy.sh'
            }
        }
    }
}
