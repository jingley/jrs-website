pipeline {
    agent {
        dockerfile {
            filename 'docker/Dockerfile'
        }
    }
    environment {
        CI = 'true'
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }
    stages {
        stage('Build For Testing') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deploy to Gh-Pages') {
            when {
                branch 'production'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'GIT_CREDS', passwordVariable: 'GIT_CREDS_PASS', usernameVariable: 'GIT_CREDS_USR')]) {
                    sh '''
                        git remote set-url origin https://github.com/jingley/jrs-website.git
                        git config --global user.email "ci@jenkins.com" && git config --global user.name "ci-auto"
                        input message "ready to proceed?""
                        ./jenkins/scripts/deploy.sh'
                    '''
                }
                /*sh '''
                    git remote set-url origin https://github.com/jingley/jrs-website.git
                    git config --global user.email 'ci@jenkins.com' && git config --global user.name 'ci-auto'
                    git config --global credential.helper '/bin/bash ${WORKSPACE}/ops/credentials-helper.sh'
                '''
                sh './jenkins/scripts/deploy.sh'*/
            }
        }
    }
}
