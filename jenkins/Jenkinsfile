pipeline {
    agent {
        dockerfile {
            filename 'docker/Dockerfile'
        }
    }
    environment {
        CI = 'true'
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }
    stages {
        stage('Build For Testing') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deploy to Gh-Pages') {
            when {
                branch 'production'
            }
            steps {
                sh 'git config --global credential.helper cache'
                sh 'git remote set-url origin git@github.com:jingley/jrs-website'
                git credentialsId: 'github-ssh', url: 'git@github.com:jingley/jrs-website.git'
                input message: 'wait'
                sh './jenkins/scripts/deploy.sh'
            }
        }
    }
}
