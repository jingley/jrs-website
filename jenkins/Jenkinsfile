def dockerArgs
if(BRANCH_NAME == "development") {
    dockerArgs = '-p 3000:3000'
} else {
    dockerArgs = ''
}

pipeline {
    agent {
        docker {
            image 'node:current-alpine3.10'
            args dockerArgs
        }
    }
    environment {
        CI = 'true'
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            when {
                branch 'develop'
            }
            steps {
                sh './jenkins/scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                sh './jenkins/scripts/kill.sh'
            }
        }
    }
}
