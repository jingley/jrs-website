pipeline {
    agent {
        dockerfile {
            filename 'docker/Dockerfile'
        }
    }
    environment {
        CI = 'true'
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }
    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
                sh '''
                echo "Cleaned Up Workspace For Project"
                '''
            }
        }
        stage('Code Checkout') {
            steps {
                sh 'git config --global credential.helper wincred'
                sh 'git config --global user.email "ci@jenkins.com" && git config --global user.name "ci-auto"'
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: 'BRANCH_NAME']], 
                    credentialsId: 'GIT_CREDS',
                    extensions: [[$class: 'LocalBranch']],
                    userRemoteConfigs: [[url: 'https://github.com/jingley/jrs-website.git']]
                ])
            }
        }
        stage('Build For Testing') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deploy to Gh-Pages') {
            when {
                branch 'production'
            }
            steps {
                /*withCredentials([usernamePassword(credentialsId: 'GIT_CREDS', passwordVariable: 'GIT_CREDS_PASS', usernameVariable: 'GIT_CREDS_USR')]) {
                    sh '''
                        git config --global user.email "ci@jenkins.com" && git config --global user.name "ci-auto"
                        ./jenkins/scripts/deploy.sh
                    '''
                }*/
                sh './jenkins/scripts/deploy.sh'
            }
        }
    }
}
