pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir 'docker'
        }
    }
    environment {
        CI = 'true'
        REPO = 'github.com/jingley/jrs-website'
        GIT_CREDS = 'github-creds'
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }
    stages {
        stage('Build For Testing') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deploy to Gh-Pages') {
            when {
                branch 'production'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: '${GIT_CREDS}', passwordVariable: 'GIT_PASSWD', usernameVariable: 'GIT_USER')]) {
                    sh 'git remote set-url origin https://{GIT_USER}:{GIT_PASSWD}@${REPO}'
                }
                sh './jenkins/scripts/deploy.sh'
            }
        }
    }
}
