pipeline {
    agent {
        docker {
            image 'node:12-alpine'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true' 
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') { 
            steps {
                sh 'ls -l ./jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            steps{
                sh 'ls -l ./jenkins/scripts/deliver.sh'
                sh 'ls -l ./jenkins/scripts/kill.sh'
            }
        }
    }
}
