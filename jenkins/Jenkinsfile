pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir 'docker'
        }
    }
    environment {
        CI = 'true'
        GIT_CREDS = 'github-creds'
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '16', 
                    numToKeepStr: '10'
            )
    }
    stages {
        stage('Build For Testing') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deploy to Gh-Pages') {
            when {
                branch 'production'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'github-creds', passwordVariable: 'GIT_PASSWD', usernameVariable: 'GIT_USER')]) {
                    sh '''
                    git config --global credential.username {GIT_USER}
                    git config --global credential.helper "!echo password={GITPASSWD}; echo"
                    '''
                }
                sh './jenkins/scripts/deploy.sh'
            }
        }
    }
}
